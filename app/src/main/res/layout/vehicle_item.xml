<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vehicle_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_30"
    android:layout_marginTop="@dimen/size_22"
    android:layout_marginEnd="@dimen/size_30"
    app:cardCornerRadius="@dimen/size_16"
    app:cardElevation="@dimen/size_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_30"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_30"
        android:layout_marginBottom="@dimen/size_20">

        <ImageView
            android:id="@+id/vehicle_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/loading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vehicle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:textSize="@dimen/text_26"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/vehicle_id"
            app:layout_constraintStart_toEndOf="@+id/vehicle_icon"
            app:layout_constraintTop_toTopOf="@+id/vehicle_icon" />

        <TextView
            android:id="@+id/vehicle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:textSize="@dimen/text_16"
            app:layout_constraintBottom_toBottomOf="@+id/vehicle_icon"
            app:layout_constraintStart_toEndOf="@+id/vehicle_icon"
            app:layout_constraintTop_toBottomOf="@+id/vehicle_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>